<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create a new Campground</h1>
            <div style="width: 30%; margin: 50px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="name" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="image url" name="image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="description" name="description">
                    </div>
                    <div class="form-group">
                        <input id="i-rating" class="form-control" type="hidden" placeholder="rating" name="rating">
                        <% for(var i = 0; i < 5; i++) {%>
                            <span><i class="far fa-star" onmouseover="iconsStart(<%= i %>)" onclick="setRating(<%= i+1 %>)"></i></span>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit">
                    </div>
                </form>
                <a href="/campgrounds">Back</a>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="/JS/index.js"></script>
    <% include ../partials/footer %>